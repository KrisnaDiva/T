<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme. -->
    <style name="Theme.SettingsApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/outer_space</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/outer_space</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ContentTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/phillipine_silver</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/phillipine_silver</item>
    </style>
    <style name="Color">
        <item name="android:textColor">@color/phillipine_silver</item>
    </style>

</resources>